# 서버 설정
PORT=3000

# JWT 시크릿 키 (실제 배포 시 강력한 키로 변경)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 이메일 설정 (Gmail 사용 시)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# 데이터베이스 설정
DB_PATH=./database.sqlite

# 업로드 설정
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# CORS 설정
CORS_ORIGIN=*

# 로그 레벨
LOG_LEVEL=info
